<style>
    /* VARIABLES Y ESTILOS ESPECIFICOS DEL CHAT */
    :root {
        --wa-green: #25D366;
        --wa-dark: #075E54;
        --wa-red: #ff3b30;
    }

    /* 1. NOTIFICACIÓN ROJA */
    .wa-notification-dot {
        position: absolute;
        top: -5px;
        right: -5px;
        background-color: var(--wa-red);
        color: white;
        font-size: 12px;
        font-weight: bold;
        width: 22px;
        height: 22px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid white;
        z-index: 1002;
        opacity: 0;
        transform: scale(0);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .wa-notification-dot.show {
        opacity: 1;
        transform: scale(1);
        animation: wa-dot-bounce 1s infinite;
    }

    @keyframes wa-dot-bounce {
        0%, 100% { transform: translateY(0) scale(1); }
        50% { transform: translateY(-4px) scale(1); }
    }

    /* 2. BOTÓN FLOTANTE */
    .wa-floating-btn {
        position: fixed;
        bottom: 20px;
        left: 20px;
        width: 60px;
        height: 60px;
        background-color: var(--wa-green);
        color: white;
        border-radius: 50%;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        cursor: pointer;
        z-index: 1000;
        transition: all 0.3s ease;
        animation: pulse-green 2s infinite;
    }

    .wa-floating-btn:not(.active):hover {
        transform: scale(1.1);
    }

    .wa-floating-btn.active {
        background-color: #333;
        animation: none;
        transform: rotate(90deg);
    }

    .wa-icon {
        position: absolute;
        width: 35px;
        height: 35px;
        fill: white;
        transition: all 0.3s ease;
    }

    .wa-icon-logo { opacity: 1; transform: scale(1); }
    .wa-icon-close { opacity: 0; transform: scale(0) rotate(-90deg); }

    .active .wa-icon-logo { opacity: 0; transform: scale(0) rotate(90deg); }
    .active .wa-icon-close { opacity: 1; transform: scale(1) rotate(0); }

    @keyframes pulse-green {
        0% { box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.7); }
        70% { box-shadow: 0 0 0 15px rgba(37, 211, 102, 0); }
        100% { box-shadow: 0 0 0 0 rgba(37, 211, 102, 0); }
    }

    /* 3. VENTANA DE CHAT */
    .wa-chat-box {
        display: none;
        position: fixed;
        bottom: 95px;
        left: 20px;
        width: 350px;
        max-width: 85%;
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.2);
        overflow: visible;
        z-index: 1001;
        flex-direction: column;
        font-family: 'Segoe UI', sans-serif;
        animation: slideIn 0.3s ease-out forwards;
    }

    .wa-chat-box::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 20px;
        width: 0;
        height: 0;
        border-left: 10px solid transparent;
        border-right: 10px solid transparent;
        border-top: 10px solid white;
    }

    @keyframes slideIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .wa-header {
        background-color: var(--wa-green);
        padding: 20px;
        color: white;
        display: flex;
        align-items: center;
        border-radius: 10px 10px 0 0;
        position: relative;
    }

    .wa-close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: none;
        border: none;
        color: white;
        font-size: 20px;
        cursor: pointer;
        opacity: 0.8;
    }

    .wa-close-btn:hover { opacity: 1; }

    .wa-profile-pic {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 15px;
        border: 2px solid white;
        background-color: #ddd;
        object-fit: cover;
    }

    .wa-info h4 { margin: 0; font-size: 18px; font-weight: 600; }
    .wa-info p { margin: 2px 0 0; font-size: 12px; opacity: 0.9; }

    .wa-body {
        background-color: #f0f0f0;
        background-image: url('https://user-images.githubusercontent.com/15075759/28719144-86dc0f70-73b1-11e7-911d-60d70fcded21.png');
        padding: 20px;
        height: 200px;
        overflow-y: auto;
    }

    .wa-message {
        background: white;
        padding: 10px 15px;
        border-radius: 0 10px 10px 10px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        width: fit-content;
        max-width: 80%;
        position: relative;
        margin-bottom: 5px;
    }

    .wa-message::before {
        content: '';
        position: absolute;
        top: 0;
        left: -8px;
        width: 0;
        height: 0;
        border-top: 10px solid white;
        border-left: 10px solid transparent;
    }

    .wa-msg-text { color: #333; font-size: 14px; line-height: 1.4; }
    .wa-time { font-size: 10px; color: #999; display: block; text-align: right; margin-top: 4px; }

    .wa-footer {
        background: white;
        padding: 15px;
        text-align: center;
        border-radius: 0 0 10px 10px;
    }

    .wa-start-chat-btn {
        background-color: var(--wa-green);
        color: white;
        text-decoration: none;
        padding: 12px 24px;
        border-radius: 25px;
        font-weight: bold;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        box-sizing: border-box;
        gap: 8px;
        transition: background 0.3s;
        border: none;
        font-size: 16px;
        cursor: pointer;
    }

    .wa-start-chat-btn:hover { background-color: #1da851; }
    .wa-start-chat-btn img { width: 20px; height: 20px; filter: brightness(0) invert(1); }
</style>

<script>
    // 3. WHATSAPP Y NOTIFICACIONES - Desktop
    const btn = document.getElementById("wa-btn");
    const closeBtn = document.getElementById("wa-close-btn");
    const dot = document.getElementById("wa-dot");
    const chatBox = document.getElementById("whatsapp-chat");

    window.addEventListener('load', function () {
        setTimeout(function () {
            if (chatBox && chatBox.style.display !== "flex") {
                if (dot) dot.classList.add("show");
            }
        }, 5000);
    });

    function toggleChat() {
        if (!chatBox || !btn) return;
        
        if (chatBox.style.display === "none" || chatBox.style.display === "") {
            chatBox.style.display = "flex";
            btn.classList.add("active");
            if (dot) { dot.classList.remove("show"); dot.style.display = "none"; }
        } else {
            chatBox.style.display = "none";
            btn.classList.remove("active");
        }
    }

    if(btn) btn.addEventListener('click', toggleChat);
    if(closeBtn) closeBtn.addEventListener('click', toggleChat);
</script>
